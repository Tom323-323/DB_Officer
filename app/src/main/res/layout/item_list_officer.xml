<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/img_color_list"
        android:layout_width="20dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/green"
        />

    <ImageView
        android:id="@+id/img_foto_officer_list"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_color_list"
        app:layout_constraintStart_toEndOf="@+id/img_color_list"
        app:layout_constraintTop_toTopOf="@+id/img_color_list"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Lebedev Evgenij"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/img_foto_officer_list"
        app:layout_constraintTop_toTopOf="@+id/img_foto_officer_list" />

    <TextView
        android:id="@+id/tv_rang_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Captain"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/img_foto_officer_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_list" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="03/07/1991"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rang_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_rang_list" />
</androidx.constraintlayout.widget.ConstraintLayout>